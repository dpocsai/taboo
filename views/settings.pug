extends layout

block main
  main
    form(action="/settings" method="post")
      dl
        dt 
          label(for="time-range") Time
        dd 
          input#time-range(type="range" name="time-range" min="30" max="90" value="60" step="15" oninput="changeTime(value)")
          output#time(for="time-range") 60
      dl 
      dl
        dt 
          label(for="rounds-range") Rounds
        dd 
          input#rounds-range(type="range" name="rounds-range" min="1" max="7" value="3" step="1" oninput="changeRounds(value)")
          output#rounds(for="round-range") 3
      dl 
        dt
          label(for="teams") Teams
        dd 
          input#team-range(type="range" name="team-range" min="2" max="4" value="2" step="1" oninput="changeTeams(value); disableTextInput(value)")
          output#teams(for="team-range") 2
      dl
        dd 
          input(type="text" placeholder="Team 1" maxlength="10" name="teams" pattern="[a-zA-Z]{0,10}" title="Alphabetical letters only")
        dd 
          input(type="text" placeholder="Team 2" maxlength="10" name="teams" pattern="[a-zA-Z]{0,10}" title="Alphabetical letters only")
        dd
          input#textInput3.disabledTextInput(type="text" placeholder="Team 3" maxlength="10" name="teams" pattern="[a-zA-Z]{0,10}" title="Alphabetical letters only" disabled)
        dd
          input#textInput4.disabledTextInput(type="text" placeholder="Team 4" maxlength="10" name="teams" pattern="[a-zA-Z]{0,10}" title="Alphabetical letters only" disabled )
      input(type="submit" value="Save")

